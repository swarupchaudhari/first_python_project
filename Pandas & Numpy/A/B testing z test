test_mean, test_std, test_size



a = control_std**2 / control_size
b = test_std**2 / test_size

Z_score = (control_mean - test_mean) / np.sqrt(a + b)





Z_score


alpha = 0.05

critical_z_value = st.norm.ppf(1 - alpha)

